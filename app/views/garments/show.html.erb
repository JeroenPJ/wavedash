<% content_for(:title) do %><%= @garment.name %> ~ <%= @garment.category.name %><% end %>

<div class="flex flex-center">
  <h1><%= @garment.name %></h1>
</div>

<div class="container">
  <div class="header">
    <div class="col-12 col-sm-6">
      <p><%= @garment.description %></p>
    </div>
    <div class="col-12 col-sm-6">
      <%= link_to "Add to cart now", "#", class: 'button add-to-cart float-right' %>
      <p class="float-right price"><%= @garment.price %></p>
    </div>
  </div>

  <% @garment.images.each do |image| %>
    <div class="col-12 col-md-12">
      <%= image_tag image.src, width: '100%', height: 'auto' %>
    </div>
  <% end %>
</div>
