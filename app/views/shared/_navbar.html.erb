<% unless @hide_navbar %>
  <div class="navbar">
    <p><%= link_to "wavedash", root_path, class: 'wavedash line' %></p>
    <p class="navbar-right">
      <% Category.all.each do |category| %>
        <% if category == @category %>
          <span class="bold"><%= category.name %></span> |
        <% else %>
          <%= link_to category.name, category_path(category.name), class: 'line' %> |
        <% end %>
      <% end %>

      <%= link_to "cart", cart_path, class: 'line' %></p>
  </div>
<% end %>
