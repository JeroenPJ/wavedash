<div class="navbar">
  <p><%= line_to wavedashize, root_path, class: 'wavedash' %></p>
  <p class="navbar-right">
    <% Category.all.each do |category| %>
      <% if category == @category %>
        <span class="bold"><%= category.name %></span> |
      <% else %>
        <%= line_to category.name, category_path(category.name) %> |
      <% end %>
    <% end %>

    <%= line_to cart_path, id: "cart", data: { controller: "cart", cart_count: @order.count } do %>
      cart <strong><span data-target="cart.count"><%= cart_count(@order.count) %></span></strong>
    <% end %>
  </p>
</div>
