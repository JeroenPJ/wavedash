<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th>price</th>
      <th>sold units</th>
      <th>actions</th>
    </tr>
  </thead>

  <tbody>
    <% @garments.each do |garment| %>
      <tr>
        <td><%= link_to garment.name, get_garment_path(garment) %></td>
        <td><%= currency(garment.price) %></td>
        <td><%= @units_sold[garment.id] || 0 %></td>
        <td>
          <%= link_to "edit", edit_admin_garment_path(garment) %>,
          <%= link_to "delete", admin_garment_path(garment), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
